<% layout("/layouts/boilerplate.ejs") %>
    <body>
        <div class="row mt-3">
            <div class="col-8 offset-1">
                <br><br>
            <h2>Create a new listing</h2>
            <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">  <!-- enctype = "multipart/form-data" is used to store files -->
                <div class="mb-3">
                    <label for="title" class="form-label">Enter title : </label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" id="title" required>
                    <div class="valid-feedback">Title Looks Good!</div>
                    <div class="invalid-feedback">Enter a cachy title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Enter description : </label>
                    <textarea name="listing[description]" placeholder="Enter description" id="description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
<!--                <div class="mb-3">-->
<!--                    <label for="image" class="form-label">Enter image URL/Link : </label>-->
<!--                    <input name="listing[image]" placeholder="Enter image url/link" type="text" id="image" class="form-control">-->
<!--                </div>-->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload listing Image : </label>
                    <input name="listing[image]" type="file" id="image" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Enter price : </label>
                        <input name="listing[price]" placeholder="Enter price" type="number" id="price" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Enter location : </label>
                        <input name="listing[location]" placeholder="Enter location" type="text" id="location" class="form-control" required>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Enter country : </label>
                    <input name="listing[country]" placeholder="Enter country" type="text" id="country" class="form-control" required>
                    <div class="invalid-feedback">Country should be valid</div>
                </div>
                <button type="submit" class="btn btn-dark add-btn mt-3 mb-3">Add</button>
            </form>
            </div>
        </div>
    </body>
