<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h3 class="col-6 offset-3">Sign in For RoomRover</h3>
    <div class="col-6 offset-3">
        <form action="/signin" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username : </label>
                <input name="username" placeholder="Enter Username" type="text" class="form-control" id="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Enter a strong password : </label>
                <input name="password" placeholder="Enter password" type="password" class="form-control" id="password" required>
            </div>
            <button class="btn btn-success">Sign in</button>
        </form>
    </div>
</div>
